<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sy.dao.UserDao">
	<!-- 目的：为DAO接口方法提供sql语句配置 -->
	<!-- 查询用户和密码进行登录 -->
	<select id="findByUsername" resultType="com.sy.entity.User" parameterType="String">
	
		select * from user_t where user_name = #{username} and password = #{password}
			
	</select>
	
	<!-- 增加用户名和密码进行注册  -->
 	<insert id="registerByUsernameAndPassword" parameterType="com.sy.entity.User">
	    
 	    insert into user_t (user_name,password)
 	    values
 	    (#{username},#{password})
	
 	</insert>
	
</mapper>	